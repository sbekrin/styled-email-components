{
  "name": "styled-email-components",
  "version": "1.0.6",
  "description": "ðŸ’Œ styled-components for emails",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "typings/styled-email-components.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "rm -rf ./lib",
    "build": "babel ./src --out-dir lib --ignore tests",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "jest",
    "test-types": "tsc --noEmit typings/**/*.spec.tsx"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "color-shorthand-hex-to-six-digit": "^2.3.0",
    "css-shorthand-expand": "^1.2.0",
    "fbjs": "^1.0.0",
    "postcss-safe-parser": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.6",
    "@types/react": "^16.4.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "doctoc": "^1.3.1",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "styled-components": "^3.4.1",
    "typescript": "^3.0.1"
  },
  "peerDependencies": {
    "react": ">=15",
    "styled-components": "~3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "unobtrusive",
      "unobtrusive/react"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "readme.md": [
      "doctoc --github --notitle --maxlevel 3",
      "prettier --write",
      "git add"
    ]
  }
}
